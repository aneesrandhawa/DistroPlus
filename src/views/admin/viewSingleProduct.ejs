<%- include('../partials/adminHeader.ejs') -%>
    <!--start page wrapper -->
    <div class="page-wrapper">
        <div class="page-content">
            <!--breadcrumb-->
            <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                <div class="breadcrumb-title pe-3">Tables</div>
                <div class="ps-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0">
                            <li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Data Table</li>
                        </ol>
                    </nav>
                </div>
                <div class="ms-auto">
                    <div class="btn-group">
                        <button type="button" class="btn btn-primary">Settings</button>
                        <button type="button" class="btn btn-primary split-bg-primary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown">	<span class="visually-hidden">Toggle Dropdown</span>
							</button>
                        <div class="dropdown-menu dropdown-menu-right dropdown-menu-lg-end"> <a class="dropdown-item" href="javascript:;">Action</a>
                            <a class="dropdown-item" href="javascript:;">Another action</a>
                            <a class="dropdown-item" href="javascript:;">Something else here</a>
                            <div class="dropdown-divider"></div> <a class="dropdown-item" href="javascript:;">Separated link</a>
                        </div>
                    </div>
                </div>
            </div>
            <!--end breadcrumb-->
            <div class="row">
                <div class="col-xl-7 mx-auto">
                    <h6 class="mb-0 text-uppercase">Products</h6>
                    <hr/>
                    <div class="card border-top border-0 border-4 border-primary">
                        <div class="card-body p-5">
                            <div class="card-title d-flex align-items-center">
                                <div><i class="bx bxs-user me-1 font-22 text-primary"></i>
                                </div>
                                <h5 class="mb-0 text-primary">View Products</h5>
                            </div>
                            <hr>
                            <form id="cpro" enctype="multipart/form-data">
                                <div class="col-md-6" style="float:right;">
                                    <img src="/data/uploads/<%=result.pro_img%>" class="img-fluid" style="height: 240px;width: 240px;float: right;" alt="">
                                </div>
                                <div class="col-md-6">
                                    <label for="pro_name" class="form-label">Product Name</label>
                                    <input type="text" value="<%=result.pro_name%>" readonly class="form-control" name="pro_name" id="product_name">
                                </div>
                                <div class="col-md-4">
                                    <label for="cat_id" class="form-label">Category</label>
                                    <select name="cat_id" class="form-select" id="category_id" disabled>
                                            <option value="<%=result.cat_id%>" selected><%=result.cat_id%></option>
                                            <option value="1">Mobile</option>
                                            <option value="2">Laptop</option>
                                        </select>
                                </div>
                                <div class="col-md-6">
                                    <label for="proPrice" class="form-label">Product Price</label>
                                    <input type="text" value="<%=result.pro_price%>" readonly class="form-control" name="pro_price">
                                </div>
                                <div class="col-12">
                                    <div class="form-check">
                                        <% if(result.pro_featured){a='checked'}else{a=null}%>
                                            <input class="form-check-input" <%=a%> type="checkbox" name="pro_featured" DISABLED>
                                            <label class="form-check-label" for="feature">Featured</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <label for="pro_desc" class="form-label">Product Discription</label>
                                    <input class="form-control" type="text" value="<%=result.pro_desc%>" readonly name="pro_desc" placeholder="Discription" rows="3"></textarea>
                                </div>
                                <div class="col-12">
                                    <br>
                                    <h5><a href="http://localhost:3000/admin/vpro">Back</a></h5>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!--end page wrapper -->
    <%- include('../partials/adminFooter.ejs') -%>