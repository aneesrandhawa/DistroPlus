<%- include('../partials/adminHeader.ejs') -%>
    <!--start page wrapper -->
    <div class="page-wrapper">
        <div class="page-content">
            <!--breadcrumb-->
            <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                <div class="breadcrumb-title pe-3">Forms</div>
                <div class="ps-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0">
                            <li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Form Layouts</li>
                        </ol>
                    </nav>
                </div>
                <div class="ms-auto">
                    <div class="btn-group">
                        <button type="button" class="btn btn-primary">Settings</button>
                        <button type="button" class="btn btn-primary split-bg-primary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown">	<span class="visually-hidden">Toggle Dropdown</span>
							</button>
                        <div class="dropdown-menu dropdown-menu-right dropdown-menu-lg-end"> <a class="dropdown-item" href="javascript:;">Action</a>
                            <a class="dropdown-item" href="javascript:;">Another action</a>
                            <a class="dropdown-item" href="javascript:;">Something else here</a>
                            <div class="dropdown-divider"></div> <a class="dropdown-item" href="javascript:;">Separated link</a>
                        </div>
                    </div>
                </div>
            </div>
            <!--end breadcrumb-->
            <div class="row">
                <div class="col-xl-7 mx-auto">
                    <h6 class="mb-0 text-uppercase">Categories</h6>
                    <hr/>
                    <div class="card border-top border-0 border-4 border-primary">
                        <div class="card-body p-5">
                            <div class="card-title d-flex align-items-center">
                                <div><i class="bx bxs-user me-1 font-22 text-primary"></i>
                                </div>
                                <h5 class="mb-0 text-primary">Create Categories</h5>
                            </div>
                            <hr>
                            <form id="ccat" enctype="multipart/form-data">
                                <div class="col-md-6">
                                    <label for="catName" class="form-label">Category Name</label>
                                    <input type="text" class="form-control" id="catName" name="cat_name">
                                </div>
                                <div class="col-md-6">
                                    <label for="catImg" class="form-label">Category Image</label>
                                    <input type="file" class="form-control" id="catImg" name="cat_img">
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary px-5">Save</button>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
            <script>
                const myForm = document.getElementById('ccat');
                myForm.addEventListener('submit', async(e) => {
                    e.preventDefault();
                    const formData = new FormData(myForm)
                    const result = await fetch('http://localhost:3000/admin/ccat/', {
                        method: 'POST',
                        body: formData
                    })
                    const data = await result.json();
                    if (data.status == true) {
                        location.assign(`http://localhost:3000/admin/vcat`)
                    }
                    // document.getElementsByClassName("left")[0].innerHTML = data

                })
            </script>
            <!--end page wrapper -->
